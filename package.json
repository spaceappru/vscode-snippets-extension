{
  "name": "spaceapp-snippets",
  "displayName": "SpaceApp",
  "description": "Code snippets and templates for SpaceApp",
  "version": "0.1.0",
  "publisher": "spaceapp",
  "icon": "images/logo.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaceappru/vscode-snippets-extension"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Snippets"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:spaceapp.astroComponent",
    "onCommand:spaceapp.astroSlice",
    "onCommand:spaceapp.astroSliceLib",
    "onCommand:spaceapp.reactComponent",
    "onCommand:spaceapp.reactComponentScss",
    "onCommand:spaceapp.reactSlice",
    "onCommand:spaceapp.reactSliceScss",
    "onCommand:spaceapp.astroPage"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "@types/vscode": "^1.60.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "spaceapp.astroComponent",
        "title": "Astro Component"
      },
      {
        "command": "spaceapp.astroSlice",
        "title": "Astro Slice UI"
      },
      {
        "command": "spaceapp.astroSliceLib",
        "title": "Astro Slice UI/LIB"
      },
      {
        "command": "spaceapp.reactComponent",
        "title": "React Component"
      },
      {
        "command": "spaceapp.reactComponentScss",
        "title": "React Component SCSS"
      },
      {
        "command": "spaceapp.reactSlice",
        "title": "React Slice"
      },
      {
        "command": "spaceapp.reactSliceScss",
        "title": "React Slice SCSS"
      },
      {
        "command": "spaceapp.astroPage",
        "title": "Astro Page"
      }
    ],
    "submenus": [
      {
        "id": "spaceapp.create",
        "label": "Space Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "spaceapp.create",
          "when": "explorerResourceIsFolder",
          "group": "navigation@9"
        }
      ],
      "spaceapp.create": [
        {
          "command": "spaceapp.reactComponent",
          "group": "react"
        },
        {
          "command": "spaceapp.reactComponentScss",
          "group": "react"
        },
        {
          "command": "spaceapp.reactSlice",
          "group": "react"
        },
        {
          "command": "spaceapp.reactSliceScss",
          "group": "react"
        },
        {
          "command": "spaceapp.astroComponent",
          "group": "astro"
        },
        {
          "command": "spaceapp.astroSlice",
          "group": "astro"
        },
        {
          "command": "spaceapp.astroSliceLib",
          "group": "astro"
        },
        {
          "command": "spaceapp.astroPage",
          "group": "astro"
        }
      ]
    },
    "snippets": [
      {
        "language": "astro",
        "path": "./snippets/astro.code-snippets"
      },
      {
        "language": "scss",
        "path": "./snippets/scss.code-snippets"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/typescriptreact.code-snippets"
      }
    ]
  }
}